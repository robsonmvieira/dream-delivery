generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id()

  name String

  description String

  price Float

  category String

  categoryId String

  sku String
}

model Supplier {
  id String @id()

  name String @unique

  CNPJ String @unique

  address Address?

  email String @unique

  code String @unique

  phone String

  isActive Boolean

  isBlocked Boolean

  isDeleted Boolean


}

model Address {
  id String @id()

  street String?

  number String?

  zipCode String?

  city String?

  neighborhood String?

  state String?

  moreInfo String?

  supplier Supplier @relation(fields: [supplierId], references: [id])

  supplierId String


}
